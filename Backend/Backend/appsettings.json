{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "https://your-api.com",
    "Audience": "https://your-client.com",
    "Key": "your-256-bit-secret-key-replace-this",
    "GuestRole": "guest"
  },
  "MongoDbSettings": {
    "DatabaseName": "SimulationDb",
    "UsersDataCollectionName": "UserData",
    "SimulationStateCollectionName": "SimulationStates"
  },
  "SimulationApi": {
    "BaseUrl": "http://localhost:5050/api/simulation",
    "CookieName": "backend_auth",
    "Role": "api"
  }
}
